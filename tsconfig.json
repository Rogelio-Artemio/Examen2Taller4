{
  "compilerOptions": {
    "rootDir": "src",                 
    "outDir": "dist",                 
    "lib": ["ES2020"],                
    "target": "ES2020",                
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "strict": true,                   
    "resolveJsonModule": true,        
    "types": ["node"],
    "module": "CommonJS",
    "moduleResolution": "node"                
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}

